>>>>>>>>>>>>>>> Patterns 10 >>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>

// Space Stars Space

import java.util.*;

class Pattern {
    
    public static void pattern10(int n){
        for(int i = 0; i <= (2*n-1); i++){
            // Stars
            
            int stars = i;
            if(i > n){
                stars = 2*n-i;
            }
            for(int j = 1; j <= stars; j++){
                System.out.print("*");
            }
            
            System.out.println();
        }
    }
    
    public static void main(String[] args) {
        System.out.println("Pattern 10 >>");
        
        Scanner sc = new Scanner(System.in);
        int times = sc.nextInt();
        
        for(int i = 0; i < times; i++){
            int n = sc.nextInt();
            pattern10(n);
        }
        
    }
}


>>>>>>>>>>>>>>> Patterns 11 >>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>

import java.util.*;

class Pattern {
    
    public static void pattern11(int n){
        
        
        for(int i = 0; i < n; i++){
            int start1 = 1;
            if(i % 2 == 0){
                start1 = 1;
            }
            else{
                start1 = 0;
            }
            for(int j = 0; j <= i; j++){
                System.out.print(start1);
                start1 = 1- start1;
            }
        System.out.println();
        }
    }
    
    public static void main(String[] args) {
        System.out.println("Pattern 11 >>");
        
        Scanner sc = new Scanner(System.in);
        int times = sc.nextInt();
        
        for(int i = 0; i < times; i++){
            int n = sc.nextInt();
            pattern11(n);
        }
        
    }
}

